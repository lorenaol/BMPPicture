# Use the specified base image
FROM critoma/linux-u20-dev-security-ism

# Set the working directory inside the container
WORKDIR /app

# Install Java
RUN apt-get update && apt-get install -y openjdk-11-jdk

# Set JAVA_HOME environment variable
ENV JAVA_HOME /usr/lib/jvm/java-11-openjdk-amd64

# Add Java to PATH
ENV PATH $JAVA_HOME/bin:$PATH

# Copy the gradlew and gradle related files
COPY ./proiect/ /app

# Give execute permission to gradlew
RUN chmod +x gradlew

# Run the build process
RUN ./gradlew build -x test

# Adjust the CMD to run your application
#CMD ["java", "-cp", "build/libs/your-app.jar", "src.main.java.com.pWeb.proiect.ProiectApplication"]
#RUN mv ./build/libs/proiect-0.1.jar app.jar
#COPY ./build/libs/proiect-0.1.jar ./app.jar
ENTRYPOINT ["java","-jar","./build/libs/proiect-0.1.jar"]

#ENTRYPOINT ["java", "-jar", "app.jar"]
# Note: Replace 'your-app.jar' with the actual name of your jar file generated by Gradle
